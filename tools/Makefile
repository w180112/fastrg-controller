# =========== Testing Makefile ==========
# This file contains all test-related targets for FastRG Controller
# Usage: make <target> (from tools/ directory) or make -C tools <target> (from root directory)

# Define phony targets for this test makefile
.PHONY: test

# Aggregate test target
test:
	./test_script.sh

# =========== Help Target ==========
help:
	@echo "FastRG Controller Test Makefile"
	@echo "================================"
	@echo ""
	@echo "Usage: make <target> (from tools/ directory) or make -C tools <target> (from root directory)"
	@echo ""
	@echo "Available targets:"
	@echo ""
	@echo "  Comprehensive Tests:"
	@echo "    test                 - Run complete test suite"
	@echo ""
	@echo "  Utilities:"
	@echo "    help                 - Show this help message"
